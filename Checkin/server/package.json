{
  "name": "realtime-checkin",
  "version": "1.0.0",
  "description": "Realtime Checkin backend + installer",
  "main": "electron.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "build-exe": "pkg .",
    "build-installer": "electron-builder --win"
  },
  "dependencies": {
    "axios": "^1.12.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "mssql": "^11.0.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "electron": "^38.1.1",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  },
  "pkg": {
    "assets": ["../client/dist/**/*"],
    "targets": ["node18-win-x64"],
    "bin": { "realtime-checkin": "server.js" }
  },
  "build": {
    "appId": "com.fge.realtimecheckin",
    "productName": "Realtime Checkin",
    "asar": false,
    "files": ["electron.js", "server.exe", "../client/dist/**/*"],
    "win": { "target": ["nsis"] }
  }
}
